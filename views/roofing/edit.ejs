<h2>Edit Roofing Estimate</h2>
<div class="content">
	<div>
		<form method="POST" action="/roofingEstimate/save/<%= roofingEstimate._id %>">

			<div class="form-group" id=frm>
				<label for="_id">ID</label>
				<input type="number" class="form-control" id="_id" name="_id" value="<%= roofingEstimate._id %>" required disabled>
			</div>

			<div class="form-group">
				<label for="Client">Client</label>
				<input type="text" class="form-control" id="Client" name="Client" value="<%= roofingEstimate.estimatePartAbout.client %>" required>
			</div>

		    <div class="form-group">
				<label for="Created">Created</label>
				<input type="Date" class="form-control" id="Created" name="Created" value="<%=roofingEstimate.estimatePartAbout.created%>"
					required>
			</div>
            <div class="form-group">
				<label for="Address">Address</label>
				<input type="text" class="form-control" id="Address" name="Address" value="<%=roofingEstimate.estimatePartAbout.address%>"
					required>
			</div>

            <div class="form-group">
				<label for="City">City</label>
				<input type="text" class="form-control" id="City" name="City" value="<%=roofingEstimate.estimatePartAbout.city%>"
					required>
			</div>

            <div class="form-group">
				<label for="State">State</label>
				<input type="text" class="form-control" id="State" name="State" value="<%=roofingEstimate.estimatePartAbout.state%>"
					required>
			</div>

            <div class="form-group">
				<label for="zipcode">zipcode</label>
				<input type="number" class="form-control" id="zipcode" name="zipcode" value="<%=roofingEstimate.estimatePartAbout.zipcode%>"
					required>
			</div>

            <div class="form-group">
				<label for="Squre_Footage">Squre Footage</label>
				<input type="number" class="form-control" id="Squre_Footage" name="Squre_Footage" value="<%=roofingEstimate.estimateSquareFootage.sqft%>"
					required>
			</div>

            <div class="form-group">
				<label for="CostPerSquareFoot">CostPerSquareFoot</label>
				<input type="number" step = 0.01 class="form-control" id="CostPerSquareFoot" name="CostPerSquareFoot" value="<%=roofingEstimate.costPerSquareFoot%>"
					required>
			</div>

            <div class="form-group">
				<label for="BidPerSquareFoot">BidPerSquareFoot</label>
				<input type="number" step = 0.01 class="form-control" id="BidPerSquareFoot" name="BidPerSquareFoot" value="<%=roofingEstimate.bidPerSquareFoot%>"
					required>
			</div>

			<input type="submit" value="Save" class="btn btn-primary" />
		</form>
		<br/>
		<form method="get" action="/roofingEstimate">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>

